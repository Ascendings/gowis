{% extends "../layout.jinja" %}

{% block content %}

<div class="row">
  <div class="col-sm-12 panel panel-default">
    <div class="panel-heading">
      <h1>Create a Page</h1>
    </div>
    <div class="panel-body">
      <form action="/create" method="post">
        <div class="form-group">
          <label for="urlSlug"><u>URL Slug:</u></label>
          <div class="input-group">
            <span class="input-group-addon">Gowis</span>
            <input type="text" class="form-control" id="urlSlug" name="urlSlug" placeholder="url-slug">
          </div>
        </div>
        <div class="form-group">
          <label for="pageContent"><u>Page Content:</u></label>
          <textarea name="pageContent" id="pageContent" rows="14" class="form-control" placeholder="Put your markdown content here..."></textarea>
        </div>
        <div class="form-group">
          <label for="commitMessage"><u>Message:</u></label>
          <input type="text" class="form-control" id="commitMessage" name="commitMessage" placeholder="commit-message" value="created page" />
        </div>
        <div class="row bottom-links">
          <div class="col-sm-12">
            <button type="submit" class="btn btn-primary">Create Page</button>
            <a class="btn btn-default" href="/">Home</a>
            <a class="btn btn-default" href="/list">Pages</a>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

{% endblock %}
