{% extends "../layout.jinja" %}

{% block content %}

<div class="row">
  <div class="col-sm-12 panel panel-default">
    <div class="panel-heading">
      <h1>Create a Page</h1>
    </div>
    <div class="panel-body">
      <form action="{{ URLFor("wiki.create") }}" method="post">
        <div class="form-group {% if errors.urlslug %}has-error{% endif %}">
          <label for="urlSlug"><u>URL Slug:</u></label>
          <div class="input-group">
            <span class="input-group-addon">Gowis</span>
            <input type="text" class="form-control" id="urlSlug" name="url_slug" placeholder="url-slug">
          </div>
          {% if errors.urlslug %}
            <ul>
              {% for error in errors.urlslug %}
                <li><span class="help-block">{{ error }}</span></li>
              {% endfor %}
            </ul>
          {% endif %}
        </div>
        <div class="form-group">
          <label for="pageContent"><u>Page Content:</u></label>
          <textarea name="page_content" id="pageContent" rows="14" class="form-control" placeholder="Put your markdown content here..."></textarea>
        </div>
        <div class="form-group {% if errors.commitmessage %}has-error{% endif %}">
          <label for="commitMessage"><u>Message:</u></label>
          <input type="text" class="form-control" id="commitMessage" name="commit_message" placeholder="commit-message" value="created page" />
          {% if errors.commitmessage %}
            <ul>
              {% for error in errors.commitmessage %}
                <li><span class="help-block">{{ error }}</span></li>
              {% endfor %}
            </ul>
          {% endif %}
        </div>
        <div class="row bottom-links">
          <div class="col-sm-12">
            <button type="submit" class="btn btn-primary">Create Page</button>
            <a class="btn btn-default" href="{{ URLFor("wiki.home") }}">Home</a>
            <a class="btn btn-default" href="{{ URLFor("wiki.list") }}">Pages</a>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

{% endblock %}
